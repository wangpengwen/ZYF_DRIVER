    <!--app:menu="@menu/main"-->
    <!--tools:menu="@menu/main"-->
    <!--app:itemIconTint="@null"-->
    <!--app:itemBackground="@color/color_transparent"-->
    <!--app:itemTextColor="@color/color_text_blue"-->
