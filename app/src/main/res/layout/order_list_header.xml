        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:text="货物名称"
        android:textColor="@color/color_999999"
        android:textSize="10dp"/>

    <TextView
        android:layout_width="0dp"
