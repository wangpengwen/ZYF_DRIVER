        android:paddingRight="2dp"
        android:paddingBottom="2dp"
        android:text="运单号"
        android:textColor="@color/color_999999"
        android:textSize="10dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
