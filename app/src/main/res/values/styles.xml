<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/color_background</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="buttonStyle">@style/Button</item>
        <item name="editTextStyle">@style/EditText</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="navigationIcon">@drawable/vector_back</item>
        <item name="actionMenuTextColor">@color/color_1a1a1a</item>
        <item name="actionMenuTextAppearance">@style/actionMenuTextAppearance.custom</item>
    </style>

    <style name="AppTheme.Home" parent="AppTheme">
    </style>

    <style name="AppTheme.Launch" parent="AppTheme">
        <item name="android:windowBackground">@drawable/img_transition_default</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.Activity.Translucent.Style</item>
    </style>

    <style name="Animation.Activity.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/textAppearanceButton</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:windowBackground">@color/color_f6f6f6</item>
        <!--<item name="colorButtonNormal">@color/base_color</item>-->
        <!--<item name="backgroundTint">@color/color_button_tint_selector</item>-->
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHintInverse">@color/color_999999</item>
        <item name="android:textColorHint">@color/color_b9b9b9</item>
        <item name="android:textColor">@color/color_1a1a1a</item>
        <item name="android:textAppearance">@style/textAppearanceEditText</item>
        <item name="met_baseColor">@color/color_b9b9b9</item>
        <item name="met_underlineColor">@color/color_e5e5e5</item>
        <item name="met_primaryColor">@color/color_1a1a1a</item>

        <!--<item name="colorControlNormal">@color/color_e5e5e5</item>-->
        <!--<item name="colorControlActivated">@color/color_e5e5e5</item>-->
        <!--<item name="android:colorControlNormal">@color/color_e5e5e5</item>-->
        <!--<item name="android:colorControlActivated">@color/color_e5e5e5</item>-->
    </style>

    <style name="textAppearanceEditText" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textColorHintInverse">@color/color_999999</item>

    </style>

    <style name="textAppearanceButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- toolbar style function for toolbar title style  Here can only change the color-->
    <style name="Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="colorControlNormal">@color/color_666666</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/Toolbar.Title</item>
    </style>

    <style name="actionMenuTextAppearance.custom" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_1a1a1a</item>
    </style>

    <style name="Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/color_007dd2</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/color_007dd2</item>
        <item name="tabTextColor">@color/color_1a1a1a</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab.Gridy</item>
    </style>

    <style name="TextAppearance.Design.Tab.Gridy" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/color_1a1a1a</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
